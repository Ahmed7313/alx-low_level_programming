#include "main.h"

/**
 *_puts_recursion - a function that prints a string in recursion
 *@s: the printed string represented by a pointer
 *
 *Return: void
 */
void _prts_recursion(char *s)
{
  if (*s == '\0')
    {
        _putchar('\n');
        return;
    }
    _putchar(*s);
    _puts_recursion(s + 1);
}
